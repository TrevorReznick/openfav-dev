---
// components/WelcomeMessage.astro
interface Props {
  name: string;
}

const { name } = Astro.props;
---

<div class="welcome-message">
  <h1>Ciao {name}, ecco il tuo spazio di lavoro!</h1>
  <p>Benvenuto nella tua dashboard personalizzata di OpenFavs.</p>
</div>

<style>
  .welcome-message {
    background-color: #f0f4f8;
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 1.8rem;
    color: #2c3e50;
    margin-bottom: 0.5rem;
  }

  p {
    font-size: 1rem;
    color: #34495e;
  }
</style>