---
import { twMerge } from 'tailwind-merge'
import { Image } from 'astro:assets'
import testimonial1 from '../../assets/images/testimonial1.png'
import testimonial2 from '../../assets/images/testimonial2.png'
import testimonial3 from '../../assets/images/testimonial3.png'
import IconSet from './IconSet.astro'
import IconSquares from '../../assets/icons/IconSquares.astro'
import IconEnergy from '../../assets/icons/IconEnergy.astro'
import IconConnection from '../../assets/icons/IconConnection.astro'

const testimonialsData = [
  {
    title: "Manage Favorites",
    sub_title: "Pantyhose lover",
    content:
      "The powerful analytic tools have helped us streamline our processes and make data-driven decisions that positively impact our efficiency. Tailcast has been a game-changer for our business. The platform is easy to use, and the insights we've gained have driven significant improvements.",
    image: testimonial1,
    IconComponent: IconSquares

  },
  {
    title: "Yor Saved Lists",
    sub_title: "Founder of Dashflow",
    content:
      "The powerful analytic tools have helped us streamline our processes and make data-driven decisions that positively impact our efficiency. Tailcast has been a game-changer for our business. The platform is easy to use, and the insights we've gained have driven significant improvements.",
    image: testimonial2,
    IconComponent: IconConnection
  },
  {
    title: "AI Proposals",
    sub_title: "Founder of Dashflow",
    content:
      "The powerful analytic tools have helped us streamline our processes and make data-driven decisions that positively impact our efficiency. Tailcast has been a game-changer for our business. The platform is easy to use, and the insights we've gained have driven significant improvements.",
    image: testimonial3,
    IconComponent: IconEnergy
  },
  
];
---

<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <div class="absolute -top-16" id="feedback"></div>
  <div class="flex flex-col w-full lg:w-[1150px] justify-center">
    <div class="animate-fadeIn">
      <div class="flex flex-col lg:flex-row gap-8 lg:gap-5 xl:gap-10 px-6 xl:px-0 items-center">
        {testimonialsData.map((testimonial, index) => (
          <div
            class="w-11/12 sm:w-4/5 md:w-[560px] lg:w-1/3 main-border-gray-darker rounded-xl bg-bgDark3 flex flex-col px-6 py-4  text-center"
          >
             <IconSet IconComponent={testimonial.IconComponent} text={testimonial.title} />
          </div>
        ))}
      </div>
    </div>
  </div>
</div>

<style>
  .animate-fadeIn {
    opacity: 0;
    animation: fadeIn 0.5s forwards;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }
  
</style>