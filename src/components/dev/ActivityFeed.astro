---
import { Activity, Clock } from 'lucide-react'

const activities = [
  {
    id: 1,
    user: 'Sarah Chen',
    action: 'deployed new features to dashboard.example.com',
    timestamp: '10 minutes ago'
  },
  {
    id: 2,
    user: 'Alex Morgan',
    action: 'updated blog platform theme',
    timestamp: '2 hours ago'
  },
  {
    id: 3,
    user: 'Jamie Wilson',
    action: 'added new portfolio projects',
    timestamp: '5 hours ago'
  }
];
---

<div class="bg-white rounded-xl shadow-sm p-6">
  <div class="flex items-center gap-2 mb-6">
    <Activity className="w-5 h-5 text-indigo-600" />
    <h2 class="text-xl font-semibold text-gray-900">Recent Activity</h2>
  </div>
  <div class="relative">
    {/* Timeline line */}
    <div class="absolute left-2.5 top-0 h-full w-px bg-gray-200"></div>

    <div class="space-y-8">
      {activities.map((item) => (
        <div class="relative pl-10">
          {/* Timeline dot */}
          <div class="absolute left-0 top-1.5 h-5 w-5 rounded-full border-2 border-indigo-600 bg-white"></div>
          
          <div class="flex flex-col">
            <p class="text-sm text-gray-900">
              <span class="font-medium">{item.user}</span> {item.action}
            </p>
            <div class="flex items-center gap-1 mt-1 text-sm text-gray-500">
              <Clock className="w-4 h-4" />
              <span>{item.timestamp}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>