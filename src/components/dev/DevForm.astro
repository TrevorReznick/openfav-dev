---
import Button from '~/components/base/Button.astro'

const { inputs, action, title, text, doForm, button} = Astro.props

const isLogin = doForm === 'login'

---

<form
    action={action}
    class="grid grid-cols-1 gap-3 w-full"
    method="post"
    enctype="application/x-www-form-urlencoded"
>
    <div class="mb-6">
        <button
            value="google"
            name="provider"
            type="submit"            
            class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border border-mainBorder bg-bgDark2 text-primaryText hover:bg-bgDark3Hover focus:outline-none focus:ring-2 focus:ring-primaryColor disabled:opacity-50 disabled:pointer-events-none"
        >
            <svg
                class="w-4 h-auto"
                width="46"
                height="47"
                viewBox="0 0 46 47"
                fill="none"
            >
                <path
                    d="M46 24.0287C46 22.09 45.8533 20.68 45.5013 19.2112H23.4694V27.9356H36.4069C36.1429 30.1094 34.7347 33.37 31.5957 35.5731L31.5663 35.8669L38.5191 41.2719L38.9885 41.3306C43.4477 37.2181 46 31.1669 46 24.0287Z"
                    fill="#4285F4"></path>
                <path
                    d="M23.4694 47C29.8061 47 35.1161 44.9144 39.0179 41.3012L31.625 35.5437C29.6301 36.9244 26.9898 37.8937 23.4987 37.8937C17.2793 37.8937 12.0281 33.7812 10.1505 28.1412L9.88649 28.1706L2.61097 33.7812L2.52296 34.0456C6.36608 41.7125 14.287 47 23.4694 47Z"
                    fill="#34A853"></path>
                <path
                    d="M10.1212 28.1413C9.62245 26.6725 9.32908 25.1156 9.32908 23.5C9.32908 21.8844 9.62245 20.3275 10.0918 18.8588V18.5356L2.75765 12.8369L2.52296 12.9544C0.909439 16.1269 0 19.7106 0 23.5C0 27.2894 0.909439 30.8731 2.49362 34.0456L10.1212 28.1413Z"
                    fill="#FBBC05"></path>
                <path
                    d="M23.4694 9.07688C27.8699 9.07688 30.8622 10.9863 32.5344 12.5725L39.1645 6.11C35.0867 2.32063 29.8061 0 23.4694 0C14.287 0 6.36607 5.2875 2.49362 12.9544L10.0918 18.8588C11.9987 13.1894 17.25 9.07688 23.4694 9.07688Z"
                    fill="#EB4335"></path>
            </svg>
                Sign in with Google
        </button>
    </div>
    <div class="mb-6">
        <button
            value="github"
            name="provider"
            type="submit"
            class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border border-mainBorder bg-bgDark2 text-primaryText hover:bg-bgDark3Hover focus:outline-none focus:ring-2 focus:ring-primaryColor disabled:opacity-50 disabled:pointer-events-none"
        >
            <svg
                class="w-4 h-auto"
                width="46"
                height="47"
                viewBox="0 0 24 24"
                fill="currentColor"
                xmlns="http://www.w3.org/2000/svg"
            >
            <path
                d="M12 0.297C5.373 0.297 0 5.67 0 12.297c0 5.285 3.438 9.76 8.207 11.343.6.112.82-.26.82-.577 0-.285-.01-1.04-.015-2.04-3.338.727-4.042-1.61-4.042-1.61-.546-1.388-1.333-1.756-1.333-1.756-1.09-.744.083-.73.083-.73 1.205.084 1.84 1.238 1.84 1.238 1.072 1.837 2.809 1.306 3.495.997.108-.776.42-1.306.763-1.606-2.665-.303-5.467-1.335-5.467-5.942 0-1.312.467-2.385 1.236-3.224-.124-.303-.536-1.524.117-3.177 0 0 1.009-.322 3.3 1.23A11.52 11.52 0 0112 6.07c1.026.005 2.06.138 3.025.404 2.29-1.552 3.296-1.23 3.296-1.23.656 1.653.244 2.874.12 3.177.772.84 1.235 1.912 1.235 3.224 0 4.617-2.807 5.636-5.48 5.933.43.37.815 1.105.815 2.23 0 1.61-.015 2.91-.015 3.307 0 .32.217.694.825.576C20.565 22.055 24 17.582 24 12.297 24 5.67 18.627.297 12 .297z"
            ></path>
            </svg>
                Sign in with GitHub
        </button>
    </div>
    <div class="py-3 flex items-center text-xs text-secondaryText uppercase before:flex-1 before:border-t before:border-mainBorder before:me-6 after:flex-1 after:border-t after:border-mainBorder after:ms-6">
        Or
    </div>
    <!--- HEREEEE -->
    {inputs &&
        inputs.map(
            ({ type = null, name, label = '', autocomplete = 'on', placeholder = '' }) =>
                name && (
                    <div class="mb-6">
                        {label && (
                            <label for={name} class="block mb-2 text-sm text-secondaryText">
                                {label}
                            </label>
                        )}
                        <input
                            type={type}
                            name={name}
                            id={name}
                            autocomplete={autocomplete}
                            placeholder={placeholder}
                            class="py-3 px-4 block w-full text-md rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900"
                        />
                    </div>
            )
        )
    }
    <div class="mb-6">
        <Button />
    </div>
    <p class="text-sm text-center text-gray-400">Don&#x27;t have an account yet? 
        <a href="/register" class="text-indigo-400 focus:outline-none focus:underline focus:text-indigo-500 dark:focus:border-indigo-800">Sign up</a>.</p>
</form>