---
import { twMerge } from 'tailwind-merge'
import { Image } from 'astro:assets'
import IconSet from '~/components/dev/IconSet.astro'
import IconSquares from '~/assets/icons/IconSquares.astro'
import IconEnergy from '~/assets/icons/IconEnergy.astro'
import IconConnection from '~/assets/icons/IconConnection.astro'

const testimonialsData = [
  {
    title: "Manage Favorites",    
    content:
      'Organize all your resources, from links to hosting accounts, in one easily accessible place.',
    IconComponent: IconSquares

  },
  {
    title: "Yor Saved Lists",    
    content:
      'Create custom lists for specific projects or areas of interest, keeping everything tidy and efficient.',
    IconComponent: IconConnection
  },
  {
    title: "AI Proposals",
    sub_title: "Founder of Dashflow",
    content:
      'Artificial intelligence classifies and suggests relevant resources, helping you discover new tools and optimize your workflow.',
    IconComponent: IconEnergy
  },
  
]
---

<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <div class="absolute -top-16" id="feedback"></div>
  <div class="flex flex-col w-full lg:w-[1150px] justify-center">
    <div class="animate-fadeIn">
      <div class="flex flex-col lg:flex-row gap-8 lg:gap-5 xl:gap-10 px-6 xl:px-0 items-center">
        {testimonialsData.map((testimonial, index) => (
          <div
            class="w-11/12 sm:w-4/5 md:w-[560px] lg:w-1/3 main-border-gray-darker rounded-xl bg-bgDark3 flex flex-col px-6 py-4  text-center"
          >
             <IconSet 
              IconComponent={testimonial.IconComponent} 
              title={testimonial.title} 
              content={testimonial.content}
            />
          </div>
        ))}
      </div>
    </div>
  </div>
</div>

<style>
  .animate-fadeIn {
    opacity: 0;
    animation: fadeIn 0.5s forwards;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }
  
</style>