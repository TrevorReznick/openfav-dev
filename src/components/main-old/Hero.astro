---
import { Image } from 'astro:assets'
import  InvitationModal  from './InvitationModal.astro'
import dashboard from '../../assets/images/dashboard.jpg'
import * as fonts from '~/config/costants'
---

<section
  class="w-screen flex justify-center items-center bg-bgDark1 mb-[28vw] md:mb-[18vw] lg:mb-[10vw] xl:mb-[13vw] 2xl:mb-60 hero-bg-gradient pb-24 sm:pb-32 md:pb-44 lg:pb-0"
  id="home"
>

<!-- Or, if you prefer using the global function: -->
  <div class="w-full md:w-[800px] xl:w-[900px] flex flex-col justify-center items-center pt-16 md:pt-16 lg:pt-20 text-center">
    <div class="animate-fadeIn">
      <h3 class={fonts.P_TAGLINE}>
        Discover new data flow
      </h3>
    </div>
    <div class="animate-fadeIn">
      <div class={fonts.H1_HERO}>
        <h1 class="inline md:hidden">Openfav</h1>
        <h1 class="hidden md:inline">Openfav: Modern Web</h1>
      </div>
      <h1 class={fonts.H1_HERO_SUB}>
        Development Suite
      </h1>
    </div>
    <div class="animate-fadeIn">
      <h2 class={fonts.H2_SUBTITLE}>
        Harness the power of Supabase, Astro, and Tailwind for lightning-fast, scalable web applications.
      </h2>
    </div>
    <div class="animate-fadeIn">
      <div class="flex flex-col gap-2 sm:flex-row mt-14 mb-24 sm:mb-40 justify-center">
        <button
          onclick="window.openInvitationModal()"
          class="contained-button w-64 sm:w-52 h-12 mr-0 sm:mr-4 lg:mr-6 mb-2 sm:mb-0"
          id="getStartedBtn"
          aria-label="Get started"
        >
          Get Started
        </button>
        <button
          class="w-64 sm:w-52 h-12 rounded-xl font-bold text-primaryText border border-solid flex justify-center items-center cursor-pointer bg-bgDark2 hover:bg-bgDark3 border-primaryColor transition"
          id="liveDemoBtn"
          aria-label="Live demo"
        >
          Live demo
        </button>
      </div>
    </div>
    <div class="animate-fadeIn relative w-screen flex justify-center">
      <img
        src={dashboard.src}
        alt="Dashboard image"
        class="w-4/5 2xl:w-[1200px] mx-auto absolute z-10 rounded-xl main-border-gray hero-dashboard-border-gradient lg:top-6 xl:top-0"
      />
    </div>
    <div class="relative w-screen flex justify-center">
      <div class="shape-divider-bottom-1665343298 mt-4 sm:mt-16 md:mt-52 hidden lg:block">
        <svg
          data-name="Layer 1"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 1200 120"
          preserveAspectRatio="none"
          class="bg-bgDark2"
        >
          <path
            d="M1200 0L0 0 598.97 114.72 1200 0z"
            class="shape-fill bg-bgDark1 fill-bgDark1"
          ></path>
        </svg>
      </div>
    </div>
  </div>
  <InvitationModal />
</section>


<style>
  .animate-fadeIn {
    opacity: 0;
    animation: fadeIn 0.5s forwards;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }
</style>