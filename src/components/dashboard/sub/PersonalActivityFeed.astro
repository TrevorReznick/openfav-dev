---
import { Logs, Clock, Link } from 'lucide-react'
import LinkViewAll from '~/components/dashboard/sub/LinkViewAll.astro'
import {ExampleUserActivities} from '~/config/features'

const activities = ExampleUserActivities
 
---

<div class="bg-white rounded-lg shadow-sm p-4 flex flex-col justify-between h-full">
  <div class="flex flex-row justify-center items-center gap-2 pt-4 mb-6">
    <Logs className="w-5 h-5 text-indigo-600" />
    <h2 class="text-xl font-semibold text-gray-900">Last Actions</h2>
  </div>
  <div class="relative">
    {/* Timeline line */}
    <div class="absolute left-2.5 top-0 h-full w-px bg-gray-200"></div>

    <div class="space-y-8">
      {activities.map((item) => (
        <div class="relative pl-10">
          {/* Timeline dot */}
          <div class="absolute left-0 top-1.5 h-5 w-5 rounded-full border-2 border-indigo-600 bg-white"></div>
          
          <div class="flex flex-col">
            <p class="text-sm text-gray-900">
              <span class="font-medium">{item.user}</span> {item.action}
            </p>
            <div class="flex items-center gap-1 mt-1 text-sm text-gray-500">
              <Clock className="w-4 h-4" />
              <span>{item.timestamp}</span>
            </div>
          </div>
        </div>
      ))}
     <LinkViewAll />
    </div>
  </div>
</div>