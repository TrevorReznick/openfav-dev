---
import { Logs, Clock, Star } from 'lucide-react'

import {ExampleUserActivities} from '~/config/features'

const activities = ExampleUserActivities

const lists = [
  { name: 'Progetti Web', description: 'Link utili per lo sviluppo web' },
  { name: 'Risorse AI', description: 'Articoli e tutorial sull\'intelligenza artificiale' },
  { name: 'Fetish Links', description: 'Links per sborrare piedi' },
  // Altre liste...
]
 
---

<div class="bg-white rounded-xl shadow-sm p-6">
  <div class="flex items-center gap-2 mb-6">
    <Star className="w-5 h-5 text-indigo-600" />
    <h2 class="text-xl font-semibold text-gray-900">Last Created Lists</h2>
  </div>
  <div class="relative">
    {/* Timeline line 
    <div class="absolute left-2.5 top-0 h-full w-px bg-gray-200"></div>
    */}
    <div class="space-y-8">
      {lists.map((item) => (
        <div class="relative pl-10">
            {/* Timeline dot 
            <div class="absolute left-0 top-1.5 h-5 w-5 rounded-full border-2 border-indigo-600 bg-white"></div>
            */}
            <div class="flex flex-col">
                <p class="text-sm text-gray-900">
                    <span class="font-medium">You</span> {item.description}
                </p>
                <div class="flex items-center gap-1 mt-1 text-sm text-gray-500">
                <Clock className="w-4 h-4" />
                <span>{item.name}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>