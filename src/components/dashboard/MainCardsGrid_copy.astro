---
import ItemGrid from '~/components/dev/ItemGridDev.astro'
import { twMerge } from 'tailwind-merge'
import { Icon } from 'astro-icon/components'
import PersonalActivityFeed from '~/components/dashboard/sub/PersonalActivityFeed.astro'
import ActivityFeed from '~/components/dashboard/sub/ActivityFeed.astro'
import CardLists from '~/components/dashboard/sub/CardLists.astro'
import LastInsetions from '~/components/dashboard/sub/LastInsetions.astro'
/* test */
import TestDynamic from '~/components/dashboard/dev/CardListContainer.astro'
import GenericCardNew from '~/components/dashboard/sub/GenericCardNew.astro'
import GenericCardModified from '~/components/dashboard/dev/GenericCardModified.astro'
import {allActions} from '~/api/doCards'
//import GenericCardModifiedTest from '~/components/dashboard/dev/GenericCardModifiedTest.astro'
import {recentActivityData} from '~/config/features'

import {recentListsData, myActivityData, myLatActivityData, urlListData} from '~/config/cardFeatures'

const { items = [], columns, defaultIcon = '', classes = {} } = Astro.props;

const {
  container: containerClass = '',
  panel: panelClass = '',
  title: titleClass = '',
  description: descriptionClass = '',
  icon: defaultIconClass = 'text-primary',
  action: actionClass = '',
} = classes;

const updatedItems = [
  { type: 'ActivityFeed' },
  { type: 'CardLists' },
  { type: 'LastInsetions' },
  { type: 'PersonalActivityFeed' },
  ...items,
  { type: 'TestDynamic' },
  { type: 'GenericCardNew'},
  { type: 'GenericCardModified' },
  { type: 'recentListsData' },
  { type: 'myActivityData' },
  { type: 'myLatActivityData' },
  { type: 'urlListData' },
  { type: 'allActions'}

]
---

{
  updatedItems && (
    <div
      class={twMerge(
        `grid mx-auto gap-8 md:gap-y-12 ${
          columns === 4
          ? 'lg:grid-cols-4 md:grid-cols-3 sm:grid-cols-2'
          : columns === 3
              ? 'lg:grid-cols-3 sm:grid-cols-2'
              : columns === 2
                  ? 'sm:grid-cols-2 '
                  : ''
        }`,
        containerClass
      )}
    >
      {updatedItems.map((item) => (
        <div>
         {item.type === 'ActivityFeed' ? (
            <ActivityFeed />
          ) : item.type === 'CardLists' ? (
            <CardLists item={item} />
          ) : item.type === 'LastInsetions' ? (
            <LastInsetions item={item} />
          ) : item.type === 'PersonalActivityFeed' ? (
            <PersonalActivityFeed item={item} />
          ) : item.type === 'TestDynamic' ? (
            <TestDynamic item={item} />
          ) : item.type === 'GenericCardNew' ? (
            <GenericCardNew  {...recentActivityData} />
          ) : item.type === 'GenericCardModified' ? (
            <GenericCardModified  {...myActivityData} />
          ) : item.type === 'recentListsData' ? (
            <GenericCardModified  {...recentListsData} />
          ) : item.type === 'myActivityData' ? (
            <GenericCardModified  {...myActivityData} />
          ) : item.type === 'myLatActivityData' ? (
            <GenericCardModified  {...myLatActivityData} />
          ) : item.type === 'urlListData' ? (
            <GenericCardModified  {...urlListData} />
          ) : item.type === 'allActions' ? (
            <GenericCardModified  {...allActions} />
          ) : (
            <div class={twMerge('flex flex-row max-w-md', panelClass, item.classes?.panel)}>
              <div class="flex justify-center">
                {(item.icon || defaultIcon) && (
                  <Icon
                    name={item.icon || defaultIcon}
                    class={twMerge('w-7 h-7 mr-2 rtl:mr-0 rtl:ml-2', defaultIconClass, item.classes?.icon)}
                  />
                )}
              </div>
              <div class="mt-0.5">
                {item.title && <h3 class={twMerge('text-xl font-bold', titleClass, item.classes?.title)}>{item.title}</h3>}
                {item.description && (
                  <p
                    class={twMerge(`${item.title ? 'mt-3' : ''} text-muted`, descriptionClass, item.classes?.description)}
                    set:html={item.description}
                  />
                )}
              </div>
            </div>
          )}
        </div>
      ))}
    </div>
  )
}
