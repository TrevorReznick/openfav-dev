---
import Layout from '~/layouts/Layout.astro'
import MyForm from '~/components/sub-pages/DoForm.astro'

import { previousPath, currentPath } from '~/store'

const to = currentPath.get()
const from = previousPath.get()
const title = 'Sign Up'
const action = '/api/v1/auth/register'
const text = 'Register a new account'
const doForm = 'register'
const isAuthForm = true

const myButton = {
  text: 'Sign Up',  
  variant: 'base'
}

---

<Layout title = 'Auth Page' />
<Fragment>
  <MyForm 
    inputs = {[
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'password',
        name: 'password',
        label: 'Password',
      },
    ]}
    action = {action}
    title = {title}
    text = {text}
    doForm = {doForm}
    isAuthForm
    myButton={myButton}
  />
</Fragment>
