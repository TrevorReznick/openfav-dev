---
import Layout from '~/layouts/Layout.astro'
import Hero from '~/components/main-prod/Hero-prod.astro'
import Content from '~/components/dev/ContentDev.astro'
import Section from '~/components/main-prod/SecionContainer.astro'
import ScrollUpButton from '~/components/main-prod/ScrollUpButton.astro'

import { FeaturedItems1 } from '~/config/features'

import '~/assets/css/Theme.css'

---

<Layout title="test">
    <Section>
        <Hero 
            slot="header"
            tagline="Who Am I Tagline"
            title="Who Am I Title"
            subtitle="Discover more about yourself with AI insights."
            content="Manage your profile and preferences."
        />
        <Content 
            slot="content"
            isReversed
            items={FeaturedItems1}
            image={{
                src: 'https://images.unsplash.com/photo-1525909002-1b05e0c869d8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80',
                alt: 'Features Image',
            }}
        >
            <Fragment slot="content">
                <h3 class="text-2xl font-bold tracking-tight text-white sm:text-3xl mb-2">Main Features</h3>
            </Fragment>
        </Content>
    </Section>
    <ScrollUpButton />
</Layout>
