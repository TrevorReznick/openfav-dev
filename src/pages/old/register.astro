---
import Layout from '~/layouts/Layout.astro'
import MyForm from '~/components/sub-pages/FormSignin.astro'

import { previousPath, currentPath } from '~/store'

const to = currentPath.get()
const from = previousPath.get()

if(to === '/login') {
  console.log('Tu sei nella pagina di login')
} else if  (to === '/register') {
  console.log('Tu sei nella pagina di register')
}
console.log(`tu vieni dalla pagine ${from}`)
---

<Layout title="Register" />
<Fragment>
  <MyForm 
    inputs = {[
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'password',
        name: 'password',
        label: 'Password',
      },
    ]}    
    title = 'Register'
    text = 'Register a new account'
    action = '/api/v1/auth/register'
  />
</Fragment>