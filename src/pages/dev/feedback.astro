---
import Layout from '~/layouts/Layout.astro'
import MyForm from '~/components/sub-pages/DoForm.astro'

import { previousPath, currentPath } from '~/store'

const to = currentPath.get()
const from = previousPath.get()
let title = 'Leave a comment'
let action = import.meta.env.PUBLIC_EMAIL_PROVIDER_URL
let text = 'You could write some impressions here'
let doForm = 'feedback'
let isAuthForm = false

---

<Layout title = 'Feedback' />
<Fragment>
  <MyForm 
    inputs = {[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'textarea',
        name: 'text',
        label: 'Comment',
      },
    ]}
    action = {action}
    title = {title}
    text = {text}
    doForm = {doForm}
    isAuthForm = {isAuthForm}
  />
</Fragment>
