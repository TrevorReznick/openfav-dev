---
import Layout from '~/layouts/Layout.astro'
import SiteCard from '~/components/dev/SiteCard.astro'

const sites = [
  {
    thumbnail: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?auto=format&fit=crop&w=800&q=80',
    title: 'Analytics Dashboard',
    url: 'dashboard.example.com',
    tags: ['React', 'TypeScript', 'Analytics'],
    lastUpdated: '2h ago'
  },
  {
    thumbnail: 'https://images.unsplash.com/photo-1499951360447-b19be8fe80f5?auto=format&fit=crop&w=800&q=80',
    title: 'Portfolio Site',
    url: 'portfolio.example.com',
    tags: ['Design', 'Creative', 'Portfolio'],
    lastUpdated: '5h ago'
  },
  {
    thumbnail: 'https://images.unsplash.com/photo-1486312338219-ce68d2c6f44d?auto=format&fit=crop&w=800&q=80',
    title: 'Blog Platform',
    url: 'blog.example.com',
    tags: ['Content', 'Blog', 'Marketing'],
    lastUpdated: '1d ago'
  }
];
---

<Layout title="Site Cards & Activity">
  <div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Site Cards -->
        <div class="lg:col-span-2">
          <div class="grid gap-6">
            {
              sites.map((site) => <SiteCard site={site} />)
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>