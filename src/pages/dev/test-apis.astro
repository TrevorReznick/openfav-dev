---
// pages/data-fetcher.astro

import { sites } from '~/api/old/doApis'
// Fetch dei dati



let categories = []
let mainData = null
let error = null

if (sites.success) {
  mainData = sites.data
} else {
  error = error || sites.error
}
---

<html lang="it">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Data Fetcher</title>
</head>
<body>
  <div class="p-4">
    <!--
    <h1 class="text-2xl font-bold mb-4">Dati Fetched</h1>
    
    {error && <div class="text-red-500 mb-4">Errore: {error}</div>}

    <h2 class="text-xl font-semibold mb-2">Categorie:</h2>
    <ul class="list-disc pl-5 mb-4">
      {categories.map((category) => (
        <li>{category.name}</li>
      ))}
    </ul>
     -->
    <h2 class="text-xl font-semibold mb-2">Dati Principali:</h2>
    <pre class="bg-gray-100 p-2 rounded mb-4">
      {JSON.stringify(mainData, null, 2)}
    </pre>

    <h2 class="text-xl font-semibold mb-2">Invia Nuovi Dati:</h2>
    <form method="POST" class="space-y-4">
      <div>
        <label for="title" class="block mb-1">Titolo:</label>
        <input type="text" id="title" name="title" required class="w-full border p-2 rounded">
      </div>
      <div>
        <label for="description" class="block mb-1">Descrizione:</label>
        <textarea id="description" name="description" required class="w-full border p-2 rounded"></textarea>
      </div>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
        Invia Dati
      </button>
    </form>
  </div>
</body>
</html>